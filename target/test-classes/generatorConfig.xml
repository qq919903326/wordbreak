<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">


<generatorConfiguration>
    <!-- <context id="MySqlTables" targetRuntime="MyBatis3" defaultModelType="conditional"> -->
    <classPathEntry location="E:\\mysql-connector-java-6.0.3.jar"></classPathEntry>

    <context id="MySqlTables" targetRuntime="tools.IntrospectedTable4Override" defaultModelType="conditional">
        <!-- 插件 -->
        <plugin type="org.mybatis.generator.plugins.RowBoundsPlugin"/><!-- 分页 -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/> <!-- 序列化 -->
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/> <!-- toString方法 -->
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/> <!-- equals和hashCode方法 -->
        <!-- <plugin type="tools.mybatis.plugin.SelectReturnIdPlug"/> --> <!-- 返回主键 -->

        <!-- 关闭注解信息 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost/augto?characterEncoding=UTF-8"
                        userId="root" password="123456">
        </jdbcConnection>

        <!-- <jdbcConnection driverClass="oracle.jdbc.OracleDriver"
                       connectionURL="jdbc:oracle:thin:@localhost:1521:orcl"
                       userId="hwh" password="123456">
        </jdbcConnection> -->
        <!-- 根据数据库字段长度自动匹配，默认为false：bigdecimal,long,int,short ,为true时始终使用bigdecimal -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- model的配置 -->
        <javaModelGenerator targetPackage="com.wordbreak.model"
                            targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- mybatis的xml的配置 -->
        <sqlMapGenerator targetPackage="mapping"
                         targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- mapper的配置 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.wordbreak.mapper"
                             targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table schema="result" tableName="_" domainObjectName=""/>

    </context>
</generatorConfiguration>
